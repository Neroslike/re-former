<%= form_with model: @user do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@users.errors.count, "error") %> encountered</h2>

      <ul>
        <% @user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "example@example.com" %></br></br>
  <%= f.label :username %>
  <%= f.text_field :username, placeholder: "John" %></br></br>
  <%= f.label :password %>
  <%= f.password_field :password %></br></br>
  <%= f.submit %>
<% end %>
